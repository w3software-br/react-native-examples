<div class="card">
  <div class="card-header text-center"><h3>Novo Produto</h3></div>
  <div class="card-body card-block">
    <form action="/new-product" method="post" id="productForm"
      enctype="multipart/form-data">

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Nome</div>
          <input type="text" id="name" name="name" placeholder="Nome" 
          class="form-control" required>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Código de Barras</div>
          <input type="text" name="barcode" placeholder="Código de Barras" 
            class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Descição</div>
          <textarea name="description" class="form-control" 
            placeholder="Descrição do produto"></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Preço</div>
          <input type="text" name="price" placeholder="Preço" 
            class="form-control" required id="price"
            onkeyup="Helper.fixPrice(this, event)">
        </div>
      </div>      

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Controle de Estoque</div>
          <select name="stockControl" id="stockControl" class="form-control"
          onchange="Product.performStockControl(this.value);">
            <option value="1">Sim</option>
            <option value="0">Não</option>
          </select>
        </div>
      </div>
      
      <div class="form-group" id="controlStockDependence">
        <div class="input-group">
          <div class="input-group-addon">Quantidade</div>
          <input type="number" name="quantity" placeholder="Quantidade a ser inserida" 
          class="form-control" value='0' min="0">
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Categoria</div>
          <select name="category" class="form-control">
            <% categories.forEach(category => { %>
              <option value="<%=category.id%>"><%=category.name%></option>
            <%})%>
          </select>         
        </div>
      </div>

      <div class="form-group">
        <div class="card text-center">
          <div class="card-header">
            <strong class="card-title mb-3">Imagem</strong>
          </div>
          <div class="card-body">
            <div class="card-text text-sm-center">
              <input type="file" name="imageName"
                value="Atualizar Imagem" required>                       
            </div>
          </div>
      </div>
      
      <div class="form-actions form-group">
        <div class="row">

          <div class="col-sm-3">
            <button type="button" class="form-control btn btn-info"
              onclick="Product.save()">Salvar</button>            
          </div>
          <div class="col-sm-3">
            <button type="button" class="form-control btn btn-warning"
              onclick="return document.location.href='/admin'">Cancelar</button>
          </div>

        </div>
        
      </div>
    </form>
  </div>
</div>
