<div class="card">
  <div class="card-header text-center"><h3>Nova Categoria</h3></div>
  <div class="card-body card-block">
    <form action="/new-category" method="post" id="categoryForm">
      
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Nome</div>
          <input type="text" id="name" name="name" 
          placeholder="Nome da categorira" class="form-control" name="name">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <button type="button" class="form-control btn btn-info"
          onclick="Category.saveCategory()">Salvar</button>
        </div>
        <div class="col-sm-3">
          <button type="button" class="form-control btn btn-warning"
            onclick="return document.location.href='/admin'">Cancelar</button>
        </div>
      </div>
      
    </form>
  </div>
</div>




