<div class="card">
  <div class="card-header text-center"><h3>Novo Entregador</h3></div>
  <div class="card-body card-block">
    <form action="/new-deliveryman" method="post" id="deliverymanForm">
      
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Nome</div>
          <input type="text" id="name" name="name" 
            class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Email</div>
          <input type="text" id="email" name="email" 
            class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Senha</i></div>
          <input type="password" id="pwd" name="pwd" 
          class="form-control" required>
          <button class="btn btn-ligth"
          onclick="Helper.seePwd(event);" id="buttonSeePwd">
            Exibir Senha</button>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">CPF</div>
          <input type="number" id="cpf" name="cpf" 
          placeholder="Somente números..." class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Telefone/WhatsApp</div>
          <input type="number" id="phone" name="phone" 
          placeholder="Somente números com DDD. ex: 85911223344"
           class="form-control">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3">
          <button type="button" class="form-control btn btn-info"
          onclick="Deliveryman.save(event);">Salvar</button>
        </div>
        <div class="col-sm-3">
          <button type="button" class="form-control btn btn-warning"
            onclick="return document.location.href='/admin'">Cancelar</button>
        </div>
      </div>
      
    </form>
  </div>
</div>




